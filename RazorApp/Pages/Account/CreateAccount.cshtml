@page
@model CreateAccountModel
@{
    ViewData["Title"] = "Create New Account";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Updated styles for creating a new account page */
       body {
            font-family: Arial, sans-serif;
            color: #333;
            
            background-image: url('@Url.Content("~/images/dollar.jpg")');
              background-size: cover; /* растянуть изображение на всю высоту блока */
              background-position: center;
             
                 border-radius: 0; /* без скругления углов */
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .form-container {
            background-color: rgb(203, 191, 185);
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Тень */
            margin-top: 50px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-cancel {
            margin-right: 10px;
            background-color: #dc3545; /* Красная кнопка */
            color: #fff;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="text-center" style="font-size: 40px;font-weight: 800;color: rgb(255, 85, 0);">@ViewData["Title"]</h1>

    <div class="form-container">
        <form method="post">
            <div class="form-group">
                <label asp-for="AccountDto.AccountNumber">Account Number:</label>
                <input asp-for="AccountDto.AccountNumber" class="form-control"/>
                <span asp-validation-for="AccountDto.AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDto.Balance">Balance:</label>
                <input asp-for="AccountDto.Balance" class="form-control"/>
                <span asp-validation-for="AccountDto.Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDto.AccountType">Account Type:</label>
                <input asp-for="AccountDto.AccountType" class="form-control"/>
                <span asp-validation-for="AccountDto.AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDto.CustomerId">Customer Id:</label>
                <input asp-for="AccountDto.CustomerId" class="form-control"/>
                <span asp-validation-for="AccountDto.CustomerId" class="text-danger"></span>
            </div>

            <button style="margin-left: 230px;" type="submit" class="btn btn-primary">Create Account</button>
            <a asp-page="/Account/GetAccounts" class="btn btn-secondary btn-cancel">Cancel</a>
        </form>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

