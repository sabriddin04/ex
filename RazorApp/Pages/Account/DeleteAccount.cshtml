@page
@model RazorApp.Pages.Account.DeleteAccountModel

@{
    ViewData["Title"] = "Delete Accounts";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete this account?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Account/GetAccounts" class="btn btn-secondary">Cancel</a>
</form>