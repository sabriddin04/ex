@page "{id:int}"
@model RazorApp.Pages.Account.UpdateAccountModel
@{
    ViewData["Title"] = "Update Account";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding-top: 50px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <form method="post">
            <input type="hidden" asp-for="Account.Id" />

            <div class="form-group">
                <label asp-for="Account.AccountNumber">Account Number:</label>
                <input asp-for="Account.AccountNumber" class="form-control" />
                <span asp-validation-for="Account.AccountNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Account.Balance">Balance:</label>
                <input asp-for="Account.Balance" class="form-control" />
                <span asp-validation-for="Account.Balance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Account.CustomerId">Customer ID:</label>
                <input asp-for="Account.CustomerId" class="form-control" />
                <span asp-validation-for="Account.CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Account.AccountType">Account Type:</label>
                <input asp-for="Account.AccountType" class="form-control" />
                <span asp-validation-for="Account.AccountType" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update Account</button>
            <a asp-page="/Account/GetAccounts" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>